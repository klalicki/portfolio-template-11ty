<header class="main-nav-container">
  <a href="#main-content" class="skip-link">Skip to main content</a>
  <div class="site-masthead">
    <a href="/">
      <h3>{{siteInfo.designerName}}</h3>
      <p>{{siteInfo.designerTagline}}</p>
    </a>
  </div>
  <div class="sidebar-rule"></div>
  <nav class="main-nav" id="main-nav-element">
    <button
      class="btn-toggle-menu"
      aria-label="Toggle menu"
      aria-controls="main-nav-element"
    >
      <svg viewBox="0 0 100 60" width="30" height="30">
        <rect width="100" height="10"></rect>
        <rect y="30" width="100" height="10"></rect>
        <rect y="60" width="100" height="10"></rect>
      </svg>
    </button>
    <ul class="sidebar-nav-link-section nav-link-section-hidden">
      {{ collections.sorted | eleventyNavigation |
      eleventyNavigationToHtml({activeKey: eleventyNavigation.key
      ,activeAnchorClass: "active",listItemClass: "nav-list-item",
      listItemHasChildrenClass: "nav-list-item-has-children"}) | safe }}
    </ul>
  </nav>
</header>
